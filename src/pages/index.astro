---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';
import ProductCard from '../components/ProductCard.astro';
import { products } from '../data/products';

const recentProducts = products.slice(0, 3);
---

<BaseLayout title="Kazuya Yoshida | Portfolio" activePage="overview">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 order-lg-2 mb-5 mb-lg-0">
          <div class="profile-image-wrapper text-center">
            <img
              src="/images/profile.png"
              alt="Kazuya Yoshida"
              class="profile-image"
              onerror="this.src='https://via.placeholder.com/400x400/1a1a25/c9a227?text=KY'"
            />
          </div>
        </div>
        <div class="col-lg-6 order-lg-1 hero-content">
          <p class="hero-eyebrow">Software Engineer</p>
          <h1 class="hero-title">
            Hi, I'm <span class="highlight">Kazuya Yoshida</span>
          </h1>
          <p class="hero-subtitle">
            大阪大学工学部 電子情報工学科 B2。
            フルスタック開発を中心に、Web・クラウド・インフラまで幅広く挑戦しています。
          </p>
          <div class="hero-cta">
            <a href="/about" class="btn btn-primary-custom">About Me</a>
            <a href="/products" class="btn btn-outline-custom">View Products</a>
          </div>

          <!-- Social Links -->
          <div class="social-links">
            <a href="https://github.com/Nagomu0128" target="_blank" rel="noopener" class="social-link" title="GitHub (Personal)">
              <i class="bi bi-github"></i>
            </a>
            <a href="https://github.com/gdsc-osaka" target="_blank" rel="noopener" class="social-link" title="GitHub (GDSC Osaka)">
              <i class="bi bi-github"></i>
            </a>
            <a href="https://twitter.com/devnago0" target="_blank" rel="noopener" class="social-link" title="X (Twitter)">
              <i class="bi bi-twitter-x"></i>
            </a>
            <a href="https://linkedin.com/" target="_blank" rel="noopener" class="social-link" title="LinkedIn">
              <i class="bi bi-linkedin"></i>
            </a>
            <a href="mailto:kyoshidk@gmail.com" class="social-link" title="Email">
              <i class="bi bi-envelope"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Overview Section -->
  <section class="section" id="overview">
    <div class="container">
      <hr class="section-divider mb-5" />

      <SectionHeader
        eyebrow="What I Do"
        title="Overview"
        subtitle="開発が大好きなエンジニア。テック系の記事を読むのが日課です。"
      />

      <div class="row g-4">
        <!-- Card 1: Web Development -->
        <div class="col-md-6 col-lg-4 animate-on-scroll animate-delay-1">
          <div class="card-custom h-100">
            <div class="card-body-custom">
              <div class="mb-3">
                <i class="bi bi-code-slash fs-2 icon-accent"></i>
              </div>
              <h4 class="card-title-custom">Web Development</h4>
              <p class="card-text-custom">
                Next.js, React, TypeScriptを中心としたモダンなフロントエンド開発。
                Node.jsを使用したバックエンド開発も行います。
              </p>
              <div class="tech-tags">
                <span class="tech-tag">Next.js</span>
                <span class="tech-tag">React</span>
                <span class="tech-tag">TypeScript</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Card 2: Cloud & Infrastructure -->
        <div class="col-md-6 col-lg-4 animate-on-scroll animate-delay-2">
          <div class="card-custom h-100">
            <div class="card-body-custom">
              <div class="mb-3">
                <i class="bi bi-cloud fs-2 icon-accent"></i>
              </div>
              <h4 class="card-title-custom">
                Cloud & Infrastructure
                <span class="badge rounded-pill ms-2" style="background: rgba(74, 144, 164, 0.2); color: var(--color-accent-secondary); font-size: 0.65rem; vertical-align: middle;">Learning</span>
              </h4>
              <p class="card-text-custom">
                GCP, Azureなどのクラウドサービスに興味があり、現在学習中。
                Docker, Azure, Terraformを使ったインフラ構築を勉強しています。
              </p>
              <div class="tech-tags">
                <span class="tech-tag">GCP</span>
                <span class="tech-tag">Azure</span>
                <span class="tech-tag">Docker</span>
                <span class="tech-tag">Kubernetes</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Card 3: Backend -->
        <div class="col-md-6 col-lg-4 animate-on-scroll animate-delay-3">
          <div class="card-custom h-100">
            <div class="card-body-custom">
              <div class="mb-3">
                <i class="bi bi-database fs-2 icon-accent"></i>
              </div>
              <h4 class="card-title-custom">Backend & Database</h4>
              <p class="card-text-custom">
                Go, Python, Node.jsを使用したAPI開発。
                PostgreSQL, Firebaseなどのデータベース設計・運用。
              </p>
              <div class="tech-tags">
                <span class="tech-tag">Go</span>
                <span class="tech-tag">Python</span>
                <span class="tech-tag">PostgreSQL</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Products Preview -->
  <section class="section" style="background: var(--color-bg-secondary);">
    <div class="container">
      <SectionHeader
        eyebrow="Portfolio"
        title="Recent Products"
        subtitle="最近取り組んだプロジェクトの一部をご紹介します。"
      />

      <div class="row g-4">
        {recentProducts.map((product, index) => (
          <ProductCard {...product} index={index} />
        ))}
      </div>

      <div class="text-center mt-5">
        <a href="/products" class="btn btn-outline-custom">
          View All Products <i class="bi bi-arrow-right ms-2"></i>
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section">
    <div class="container">
      <SectionHeader
        eyebrow="Get in Touch"
        title="Contact"
        subtitle="お気軽にご連絡ください。"
      />

      <div class="row g-4 justify-content-center">
        <div class="col-md-6 col-lg-4 animate-on-scroll">
          <div class="contact-card">
            <div class="contact-icon">
              <i class="bi bi-envelope"></i>
            </div>
            <h4 class="contact-title">Email</h4>
            <p class="contact-text">kyoshidk@gmail.com</p>
            <a href="mailto:kyoshidk@gmail.com" class="btn btn-outline-custom btn-sm mt-3">
              Send Email
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
